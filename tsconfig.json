{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/UI/*": ["./src/UI/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/global/*": ["./src/global/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "*.config.js",
    // "**/*.test.ts*",
    "webpack.*.js"
  ]
}
